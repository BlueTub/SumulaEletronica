<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Escolha seu Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/tvEscolha"
        android:textSize="24sp" />

    <GridView
        android:id="@+id/gvClubes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/imPesquisaClube"
        android:layout_alignStart="@+id/etPesquisaClube"
        android:layout_below="@+id/imPesquisaClube"
        android:verticalSpacing="20dp"
        android:horizontalSpacing="10dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_search_category_default"
        android:id="@+id/imPesquisaClube"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/etPesquisaClube"
        android:layout_toEndOf="@+id/etPesquisaClube" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginStart="45dp"
        android:layout_marginTop="11dp"
        android:id="@+id/etPesquisaClube"
        android:layout_below="@+id/tvEscolha"
        android:layout_alignParentStart="true" />
</RelativeLayout>