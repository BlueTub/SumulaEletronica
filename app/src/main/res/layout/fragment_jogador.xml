<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.jogador.FragmentJogador">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:layout_marginEnd="47dp"
        android:layout_marginTop="27dp"
        android:id="@+id/ibPesquisarJogador"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <GridView
        android:id="@+id/gvJogador"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="20dp"
        android:horizontalSpacing="10dp"
        android:layout_marginTop="18dp"
        android:numColumns="auto_fit"
        android:layout_below="@+id/ibPesquisarJogador"
        android:layout_alignStart="@+id/editText14" />

    <EditText
        android:id="@+id/editText14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gvJogador"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:ems="10"
        android:hint="Nome Jogador"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:layout_toStartOf="@+id/ibPesquisarJogador" />
</RelativeLayout>
